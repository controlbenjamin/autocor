<!DOCTYPE html>
<html>
<head>
    @*@model System.Web.Mvc.HandleErrorInfo*@
    @model Autocor.Catalogo.Web.Models.Errores.ErrorModel

    @{
        ViewBag.Title = Model.Titulo;
        Layout = null;
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content("~/Assets/img/icono.ico")" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    <!-- Optional theme -->
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">*@
    <title>Principal</title>
    <style>
        body {
            background-color: #005f1d;
        }
        #imagen{
            padding-top: 15px;
            display: block;
            margin: 0 auto 0 auto;
            padding-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">

        <div class="row loginrow">
            <div class="col-xs-12 col-md-12" style="border: solid 1px;background: #027c28;">
                <img src="~/Assets/img/logoLtraBlanca.png" id="imagen">
            </div>
        </div>
       
 
        <div id="Error">
        <div class="row" style="margin-top: 80px;">
            <div class="col-md-12">

                <div class="alert alert-danger mar-t-20">

                    <h3 class="text-center mar-b-20"><i class="fa fa-lg fa-exclamation-circle mar-r-5"></i>@Model.Titulo</h3>

                    <p class="text-center">@Model.Mensaje</p>

                    @if (!string.IsNullOrEmpty(Model.Detalle) || Model.Detalle != Model.Mensaje)
                    {
                        <p class="text-center">@Model.Detalle</p>
                    }
                </div>
            </div>
        </div>
    </div>

    </div>
</body>
</html>
