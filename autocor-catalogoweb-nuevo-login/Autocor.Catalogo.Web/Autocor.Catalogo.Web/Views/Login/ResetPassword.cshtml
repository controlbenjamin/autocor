@model  Autocor.Catalogo.Web.Models.UsuarioModel
@{
    ViewBag.Title = "ResetPassword";
}

@if (ViewData.ModelState.IsValid)
{
    <!-- Modal -->
    <div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="LoginModalTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">SOLICITUD ENVIADA</h5>
                </div>
                <div class="modal-body">
                    Se ha enviado una solicitud al administrador para blanquear su clave.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}


<div class="login">
    @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <h3 class="text-center">Solicitud de blanqueo de clave</h3>
        <div class="form-group">
            <label for="Email">Email</label>
            <div class="input-group input-group-lg">
                <span class="input-group-addon" id="sizing-addon3"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", placeholder = "Ingrese Email" })
            </div>
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger error" })
        </div>

        <div class="row">
            <div class="col-xs-12 col-md-6">
                <button type="submit" class="btn btn-exito btn-block btn-lg" id="boton" name="name">
                    <i class="fa fa-sign-in fa-lg"></i>&nbsp;
                    Enviar
                </button>
            </div>

        </div>


    }
</div>